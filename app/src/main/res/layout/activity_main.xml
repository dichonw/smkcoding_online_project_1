<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:id="@+id/toolbar1"
        app:titleTextColor="#000"
        app:title="@string/app_name"
        android:elevation="4dp"/>
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:clipToPadding="false"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/cardview_form"
        android:layout_below="@+id/toolbar1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:minHeight="200dp"
                android:background="@drawable/ic_form_biodata"
                android:id="@+id/gambar1"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Form Biodata"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_marginLeft="9dp"
                android:layout_below="@+id/gambar1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:text="Tambahkan data diri didalam form ini!"
                android:layout_below="@+id/text1"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="185dp"
                android:text="Klik!"
                android:textSize="15dp"
                android:textColor="#fff"
                android:id="@+id/btn_form"
                android:background="@drawable/ic_border_radius"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:clipToPadding="false"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/cardview_about"
        android:layout_below="@+id/cardview_form">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:minHeight="200dp"
                android:background="@drawable/ic_about"
                android:id="@+id/gambar2"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_marginLeft="9dp"
                android:layout_below="@+id/gambar2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:text="Lihat profil dan data pribadi tentang saya"
                android:layout_below="@+id/text2"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="185dp"
                android:text="Klik!"
                android:textSize="15dp"
                android:textColor="#fff"
                android:id="@+id/btn_about"
                android:background="@drawable/ic_border_radius"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

